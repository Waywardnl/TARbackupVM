## Get Date and time into string $NU
#
NU=$(date +"%m-%d-%y_%H-%M")

## Snapshots maken
#
VBoxManage snapshot Wayward_OPNSense take TARBackup$NU

sleep 60

cd /BSD07zdata/VBox/Backup
rm -R Wayward_$USER.bak

cd /BSD07zdata/VBox/Wayward_OPNSense

## Show the name of the Snapshot
#
VBoxManage snapshot Wayward_OPNSense list

cd /usb-WD2/
rm Wayward_$USER.tar.gz
cd /BSD07zdata/VBox/Wayward_OPNSense

tar --exclude="Wayward_OPNSense/Snapshots/" --verbose -czf - * | openssl enc -e -aes-256-cbc -pbkdf2 -iter 200000 -ou
t /usb-WD1/Wayward_$USER.tar.gz -pass file:/home/$USER/passwd.dat > /BSD07zdata/VBox/Share/logs/Tar_$USER_Backup.log

cd /BSD07zdata/VBox/Backup
rm -R Wayward_OPNSense.bak

## Delete Snapshot
#
VBoxManage snapshot Wayward_OPNSense delete TARBackup$NU

#################################################
## Restore a virtual machine CLI
##
## openssl enc -d -aes-256-cbc -pbkdf2 -iter 200000 -in Wayward_OPNSense.tar.gz  | tar xz --verbose
